<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="#FFF">

    <TextView
        android:id="@+id/left_upper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp">
    </TextView>

    <TextView
        android:id="@+id/right_upper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:layout_toLeftOf="@+id/poster">
    </TextView>

    <TextView
        android:id="@+id/left_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/left_upper"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp">
    </TextView>

    <TextView
        android:id="@+id/right_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/right_upper"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_toLeftOf="@+id/poster">
    </TextView>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/poster"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentRight="true">
    </androidx.appcompat.widget.AppCompatImageView>

    <TextView
        android:id="@+id/left_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:textAppearance="@style/TextAppearance.Material3.TitleSmall">
    </TextView>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/right_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:layout_toLeftOf="@+id/poster"
        android:textAppearance="@style/TextAppearance.Material3.TitleSmall">
    </androidx.appcompat.widget.AppCompatTextView>

</RelativeLayout>

