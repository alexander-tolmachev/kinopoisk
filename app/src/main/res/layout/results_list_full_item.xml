<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.MaterialComponents.DayNight"
    app:cardCornerRadius="3dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#FFF">


        <!--     <androidx.constraintlayout.widget.ConstraintLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent" /> -->
        <TextView
            android:id="@+id/left_upper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="0dp">
        </TextView>

        <TextView
            android:id="@+id/right_upper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="0dp"
            android:layout_toLeftOf="@+id/poster">

        </TextView>

        <TextView
            android:id="@+id/left_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/left_upper"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp">
        </TextView>

        <TextView
            android:id="@+id/right_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/right_upper"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/poster"
            android:layout_marginStart="16dp">
        </TextView>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/poster"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentRight="true">
        </androidx.appcompat.widget.AppCompatImageView>

        <TextView
            android:id="@+id/left_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="0dp"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall">
        </TextView>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/right_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="0dp"
            android:layout_toLeftOf="@+id/poster"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall">

        </androidx.appcompat.widget.AppCompatTextView>


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>